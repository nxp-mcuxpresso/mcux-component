config MCUX_COMPONENT_component.gen_hal.memc
	bool "Memory controller drivers [EXPERIMENTAL]"
	default n
	select MCUX_COMPONENT_component.gen_hal.pinctrl
	select MCUX_COMPONENT_component.zephyr_header.drv_memc



config MCUX_COMPONENT_component.gen_hal.memc.flexspi
	bool
	default y if MCUX_COMPONENT_component.gen_hal.memc












menuconfig MEMC
	bool
	select EXPERIMENTAL
	default y if MCUX_COMPONENT_component.gen_hal.memc
	help
	  Add support for memory controllers


if MEMC

config MEMC_INIT_PRIORITY
	int "Initialization priority"
	default 0
	help
	  Memory controllers initialization priority.

rsource "Kconfig.mcux"

endif
