config MCUX_COMPONENT_component.zephyr_headers
	bool "Zephyr Headers"
	help
	  Zephyr Headers Adapted to the SDK Environment

menuconfig MCUX_COMPONENT_component.gen_hal
    bool "Generic HAL"
	select MCUX_COMPONENT_component.zephyr_headers
    help
      Generic HAL based on Zephyr

	if MCUX_COMPONENT_component.gen_hal
		rsource "zephyr/drivers/flash/Kconfig"
		rsource "zephyr/drivers/memc/Kconfig"
		rsource "zephyr/drivers/pinctrl/Kconfig"
		rsource "zephyr/drivers/clock_control/Kconfig"
		osource "components/gen_hal/_boards/${board}/Kconfig"
		osource "components/gen_hal/devices/${soc_portfolio}/${soc_series}/Kconfig"
	endif

	if MCUX_COMPONENT_component.zephyr_headers
		rsource "Kconfig.map"
		rsource "Kconfig.zephyr_headers"
	endif

config MCUX_COMPONENT_component.gen_hal.osa
	bool "OSA to support Zephyr Kernel related features"
	select MCUX_COMPONENT_component.zephyr_headers.kernel
	help
		OSA to support Zephyr kernel features such as thread.
