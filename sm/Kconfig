menu "System Manager (SM)"

config MCUX_COMPONENT_component.sm_clock
    bool "clock"
    select MCUX_COMPONENT_component.sm.crc
    select MCUX_COMPONENT_component.sm.scmi
    select MCUX_COMPONENT_component.sm.smt

    if MCUX_COMPONENT_component.sm_clock
      choice
        prompt "porting layers"
        default MCUX_DEPENDENCY_COMPONENT_component.sm_clock_DEPEND_ANYOF_OPTION_1

        config MCUX_DEPENDENCY_COMPONENT_component.sm_clock_DEPEND_ANYOF_OPTION_1
          bool "imx95_cm33"
          select MCUX_COMPONENT_component.sm.imx95_cm33

        config MCUX_DEPENDENCY_COMPONENT_component.sm_clock_DEPEND_ANYOF_OPTION_2
          bool "imx95_cm7"
          select MCUX_COMPONENT_component.sm.imx95_cm7

        config MCUX_DEPENDENCY_COMPONENT_component.sm_clock_DEPEND_ANYOF_OPTION_3
          bool "imx943_cm33_core0"
          select MCUX_COMPONENT_component.sm.imx943_cm33_core0

        config MCUX_DEPENDENCY_COMPONENT_component.sm_clock_DEPEND_ANYOF_OPTION_4
          bool "imx943_cm33_core1"
          select MCUX_COMPONENT_component.sm.imx943_cm33_core1

        config MCUX_DEPENDENCY_COMPONENT_component.sm_clock_DEPEND_ANYOF_OPTION_5
          bool "imx943_cm7_core0"
          select MCUX_COMPONENT_component.sm.imx943_cm7_core0

        config MCUX_DEPENDENCY_COMPONENT_component.sm_clock_DEPEND_ANYOF_OPTION_6
          bool "imx943_cm7_core1"
          select MCUX_COMPONENT_component.sm.imx943_cm7_core1

      endchoice
    endif

