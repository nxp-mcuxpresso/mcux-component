config MCUX_COMPONENT_component.sm_reset
    bool "reset"
    select MCUX_COMPONENT_component.sm.crc
    select MCUX_COMPONENT_component.sm.scmi
    select MCUX_COMPONENT_component.sm.smt

    if MCUX_COMPONENT_component.sm_reset
      choice
        prompt "porting layers"
        default MCUX_DEPENDENCY_COMPONENT_component.sm_reset_DEPEND_ANYOF_OPTION_2

        config MCUX_DEPENDENCY_COMPONENT_component.sm_reset_DEPEND_ANYOF_OPTION_1
          bool "imx943_cm33_core0"
          select MCUX_COMPONENT_component.sm.imx943_cm33_core0

        config MCUX_DEPENDENCY_COMPONENT_component.sm_reset_DEPEND_ANYOF_OPTION_2
          bool "imx943_cm33_core1"
          select MCUX_COMPONENT_component.sm.imx943_cm33_core1

        config MCUX_DEPENDENCY_COMPONENT_component.sm_reset_DEPEND_ANYOF_OPTION_3
          bool "imx943_cm7_core0"
          select MCUX_COMPONENT_component.sm.imx943_cm7_core0

        config MCUX_DEPENDENCY_COMPONENT_component.sm_reset_DEPEND_ANYOF_OPTION_4
          bool "imx943_cm7_core1"
          select MCUX_COMPONENT_component.sm.imx943_cm7_core1

      endchoice
    endif

config MCUX_COMPONENT_component.sm.imx943_cm33_core0
    bool
    select MCUX_COMPONENT_driver.mu1
    select MCUX_COMPONENT_component.sm.smt
    select MCUX_COMPONENT_component.sm.crc
    select MCUX_COMPONENT_component.sm.scmi
    depends on MCUX_HW_BOARD_imx943evk

