config MCUX_COMPONENT_component.pwm_ctimer_adapter
    bool "Enable component.pwm_ctimer_adapter"
    default n
    help
        Enable component.pwm_ctimer_adapter component
    select MCUX_COMPONENT_driver.ctimer
    depends on MCUX_HAS_COMPONENT_driver.ctimer    
    
