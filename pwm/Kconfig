    default n
    help
        Enable component.pwm_ftm_adapter component
    select MCUX_COMPONENT_driver.ftm
    depends on MCUX_HAS_COMPONENT_driver.ftm    
    
config MCUX_COMPONENT_component.pwm_tpm_adapter
    bool "Enable component.pwm_tpm_adapter"
    default n
