        menu "Select RW61x chip"
            config MCUX_COMPONENT_component.wifi_bt_module.board_rw61x
                bool "NXP RW61x"
                default y if MCUX_HW_BOARD_rdrw612bga
                help
                    Select this option if you have a NXP RW61X-based
                    Wireless chip. This option will enable support
                    for NXP RW61X-based series boards.

            config MCUX_COMPONENT_component.wifi_bt_module.board_frdmrw61x
